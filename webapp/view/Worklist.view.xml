<mvc:View controllerName="iot.timetracking-projects-ui.controller.Worklist" 
	xmlns="sap.m" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:semantic="sap.f.semantic">

	<semantic:SemanticPage id="page" headerPinnable="false" toggleHeaderOnTitleClick="false">

		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}" />
		</semantic:titleHeading>

		<semantic:content>
			<Table id="table" mode="MultiSelect" items="{
					path: '/Projects',
					sorter: {
						path: 'title',
						descending: false
					}
				}" noDataText="{worklistView>/tableNoDataText}" growing="true" growingScrollToLoad="true" updateFinished=".onUpdateFinished">

				<headerToolbar>
					<Toolbar>
						<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
						<ToolbarSpacer />
						<SearchField id="searchField" tooltip="{i18n>worklistSearchTooltip}" search=".onSearch" width="auto">
						</SearchField>
						<Button icon="sap-icon://add" press="onPressAdd"/>
						<Button icon="sap-icon://delete" press="onPressDelete"/>
					</Toolbar>
				</headerToolbar>

				<columns>
					<Column>
						<Text text="Title"/>
					</Column>
					<Column>
						<Text text="Description"/>
					</Column>
					<Column>
						<Text text="Faktor"/>
					</Column>
					<Column>
						<Text text="Fakt. Stunden"/>
					</Column>
				</columns>

				<items>
					<ColumnListItem type="Navigation" press=".onPress">
						<cells>
							<ObjectIdentifier title="{title}"/>
							<Text text="{description}"/>
							<ObjectNumber number="{billingFactor}"/>
							<ObjectNumber number="{
								path: 'totalTime', 
								type: 'sap.ui.model.type.Float',
								formatOptions: {
										maxFractionDigits: 2,
										roundingMode: 'away_from_zero'
								}}" />
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>

		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press=".onShareEmailPress"/>
		</semantic:sendEmailAction>

	</semantic:SemanticPage>

</mvc:View>