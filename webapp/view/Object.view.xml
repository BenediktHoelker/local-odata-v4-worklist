<mvc:View controllerName="iot.timetracking-projects-ui.controller.Object" 
	xmlns="sap.m" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:semantic="sap.f.semantic">

	<semantic:SemanticPage id="page" headerPinnable="false" toggleHeaderOnTitleClick="false" busy="{objectView>/busy}" busyIndicatorDelay="{objectView>/delay}">

		<semantic:titleHeading>
			<Title text="{title}" />
		</semantic:titleHeading>

			<Table id="table" mode="MultiSelect" items="{
					path: '/Employees',
					sorter: {
						path: 'name',
						descending: false
					}
				}" growing="true" growingScrollToLoad="true" >

				<columns>
					<Column>
						<Text text="Name"/>
					</Column>
				</columns>

				<items>
					<ColumnListItem type="Navigation" press=".onPress" selected="{}">
						<cells>
							<ObjectIdentifier title="{name}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>

		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press=".onShareEmailPress"/>
		</semantic:sendEmailAction>


	</semantic:SemanticPage>

</mvc:View>